<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/image"

    tools:context="com.example.lenovo.placendigits.MainActivity">

    <Button
        android:text="Rules"
        android:layout_height="wrap_content"
        android:id="@+id/n2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/n1"
        android:textColor="#000000"
        android:layout_width="400px"
        android:onClick="rule"/>

    <Button
        android:text="Developers"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/d1"
        android:textColor="#000000"
        android:layout_below="@+id/n2"
        android:layout_alignStart="@+id/n2"
        android:onClick="develop"
        android:accessibilityTraversalAfter="@+id/activity_main" />

    <Button
        android:text="New Game"
        android:layout_height="wrap_content"
        android:id="@+id/n1"
        android:textColor="#000000"
        android:onClick="ongen"
        android:layout_above="@+id/n2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:layout_width="400px" />
</RelativeLayout>
